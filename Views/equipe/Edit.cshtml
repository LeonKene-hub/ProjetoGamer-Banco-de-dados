@model Equipe

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/reset-and-basics.css">
    <link rel="stylesheet" href="~/css/equipes.css">
</head>

    <main>
        <section class="container-grid cadastro-equipes">
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Atualizar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Editando Equipe</h1>
                    <hr>
                </div>


                <input class="campo-entrada" type="text" placeholder="Digite o novo nome da equipe:" name="Nome" 
                    required>
                <label class="foto" for="foto-file">
                    Nenhuma imagem selecionada...
                    <input type="file" id="foto-file" name="Imagem" accept="image/png, image/jpeg" value="@ViewBag.Equipe.Nome">
                </label>

                <button type="submit">Atualizar</button>

            </form>
        </section>
    </main>

