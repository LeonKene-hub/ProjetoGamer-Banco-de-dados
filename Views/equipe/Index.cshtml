@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<h1>Tela de Equipes</h1>

<form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Nome</label>
        <input type="text" name="Nome">
    </div>

    <div class="form-group">
        <label for="">Imagem</label>
        <input type="file" name="Imagem">
    </div>

    <button type="submit" value="Upload" class="btn btn-primary">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>

    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td> <img src="@equipe.Imagem" alt=""> </td>
            </tr>
        }

    </tbody>

</table>